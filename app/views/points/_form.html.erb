<div class="card">
  <div class="card-body">
    <%= form_for [@branch , @point] do |form| %>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :จุดจ่าย , class: 'control-label' %>
          <%= form.text_field :delivery_point , class: 'form-control' , value: @increment_delivery_point %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :ระวาง , class: 'control-label' %>
          <%= form.text_field :section , class: 'form-control' , value: 1.to_i %>
        </div>
      </div>
    </div>
    <%= form.hidden_field :branch_id , value: @branch.id %>
    <hr>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :บ้านเลขที่ , class: 'control-label' %>
          <%= form.text_field :house_number , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :หมู่ที่ , class: 'control-label' %>
          <%= form.text_field :moo , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :ตำบล , class: 'control-label' %>
          <%= form.text_field :sub_district , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :อำเภอ , class: 'control-label' %>
          <%= form.text_field :district , class: 'form-control' , value: @lasted_district%>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :หมู่บ้าน , class: 'control-label' %>
          <%= form.text_field :village , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :ถนน , class: 'control-label' %>
          <%= form.text_field :road , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :หมู่ที่ , class: 'control-label' %>
          <%= form.text_field :moo , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :จังหวัด , class: 'control-label' %>
          <%= form.text_field :province , class: 'form-control'%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :จุดสังเกต , class: 'control.label' %>
          <%= form.text_area :landmark , class: 'form-control'%>
        </div>
      </div>
    </div>
    <hr>

    <br>
    <div class="row">
        <%= form.submit 'บันทึกข้อมูล' , class: 'btn btn-success btn-sm btn-block' %><br>
        <%= link_to 'ย้อนกลับ' , branch_path(@branch.id) , class: 'btn btn-danger  btn-sm btn-block' %>
    </div>
  </div>
</div>
<% end %>
